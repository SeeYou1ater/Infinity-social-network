{
  "compilerOptions": {
    "outDir": "build",
    "rootDir": "src",
    "sourceMap": true,
    "noImplicitAny": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "moduleResolution": "node",
    "module": "commonJS",
    "lib": ["es6", "dom"],
    "target": "ES5",
    "jsx": "react-jsx",
    "strict": true
  },
  "exclude": [
    "node_modules",
    "build"
  ],
  "include": [
    "src", "index.d.ts"
  ]
}